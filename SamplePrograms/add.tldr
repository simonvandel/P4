actor main := {
  receive arguments:args := {
    let adder:addActor := spawn addActor;
    send adder (1,2);
    die;
  };
};

actor addActor := {
  receive msg:(int, int) := {
    let res:int := msg.[0] + msg.[1];
    let printer:printActor := spawn printActor res;
    die;
  };
};

actor printActor := {
  receive intMsg:int := {
    printint(intMsg);
    die;
  };
};
